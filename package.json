{
  "name": "voyage-onboard-monorepo",
  "version": "1.0.0",
  "description": "KJ Khandala Bus Management System - Monorepo",
  "private": true,
  "scripts": {
    "dev": "npm run dev --prefix frontend",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:backend": "npm run dev --prefix backend",
    "dev:all": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build": "npm run build --prefix frontend",
    "build:frontend": "npm run build --prefix frontend",
    "build:backend": "npm run build --prefix backend",
    "preview": "npm run preview --prefix frontend",
    "install:all": "npm install && npm install --prefix frontend && npm install --prefix backend && npm install --prefix mobile/driver && npm install --prefix mobile/passenger",
    "clean": "npm run clean --prefix frontend && npm run clean --prefix backend",
    "test": "npm test --prefix frontend && npm test --prefix backend"
  },
  "workspaces": [
    "frontend",
    "backend",
    "mobile/passenger"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.5",
    "@mui/material": "^7.3.5",
    "@supabase/supabase-js": "^2.84.0",
    "@swc/core": "^1.15.0",
    "@types/react-big-calendar": "^1.16.3",
    "moment": "^2.30.1",
    "react-big-calendar": "^1.19.4",
    "uuid": "^13.0.0"
  }
}
