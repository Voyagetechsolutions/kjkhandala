# =====================================================
# KJ KHANDALA BUS COMPANY - ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values
# =====================================================

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/kj_khandala_bus?schema=public"

# JWT Secret for authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRATION="7d"

# App Configuration
NODE_ENV="development"
PORT=3000

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@kjkhandala.com"

# Payment Gateway (Optional)
PAYMENT_API_KEY="your-payment-gateway-api-key"
PAYMENT_SECRET="your-payment-gateway-secret"

# SMS Gateway (Optional)
SMS_API_KEY="your-sms-gateway-api-key"
SMS_SENDER_ID="KJ_KHANDALA"

# Frontend URL
FRONTEND_URL="http://localhost:3000"
ADMIN_URL="http://localhost:3000/admin"

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH="./uploads"

# Session
SESSION_SECRET="your-session-secret-change-this"

# Redis (Optional - for caching and sessions)
REDIS_URL="redis://localhost:6379"

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"
