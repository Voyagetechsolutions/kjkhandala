{
  "name": "voyage-onboard-backend",
  "version": "1.0.0",
  "description": "Backend API for KJ Khandala Bus Management System",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "migrate": "npx prisma migrate dev",
    "db:push": "npx prisma db push",
    "db:seed": "node prisma/seed-simple.js",
    "db:studio": "npx prisma studio",
    "db:generate": "npx prisma generate",
    "db:reset": "npx prisma migrate reset",
    "maintenance:seed": "node prisma/seed-maintenance.js",
    "maintenance:verify": "node scripts/verify-database.js",
    "maintenance:test": "node scripts/test-maintenance-api.js",
    "maintenance:setup": "npm run db:generate && npm run maintenance:seed && npm run maintenance:verify"
  },
  "prisma": {
    "seed": "node prisma/seed-simple.js"
  },
  "keywords": [
    "bus",
    "management",
    "api"
  ],
  "author": "Voyage Tech Solutions",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dompurify": "^3.3.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsdom": "^27.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "socket.io": "^4.6.1",
    "twilio": "^5.10.4",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
